{
  "compileOnSave": false,
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@r19/project-dashboard": ["libs/project-dashboard/src/index.ts"],
      "@r19/shared/material": ["libs/shared/material/src/index.ts"],
      "@r19/shared/models": ["libs/shared/models/src/index.ts"],
      "@r19/shared/services": ["libs/shared/services/src/index.ts"],
      "@r19/shared/state": ["libs/shared/state/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
